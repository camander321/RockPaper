@{
  Layout = "_Layout";
}
<div class="well">
  <form action="/" method="post">
    <div class="form-group col-md-6">
      <h3>PLAYER 1</h3>
      <div class="radio">
        <label>
          <input type="radio" name="player1" value="0" checked>
          Rock
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="player1" value="1">
          Paper
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="player1" value="2">
          Scissors
        </label>
      </div>
    </div>

    <div class="form-group col-md-6">
      <h3>PLAYER 2</h3>
      <div class="radio">
        <label>
          <input type="radio" name="player2" value="0" checked>
          Rock
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="player2" value="1">
          Paper
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="player2" value="2">
          Scissors
        </label>
      </div>
    </div>

    <button type="submit" class="btn btn-danger" name="button">GO!</button>
  </form>
</div>
