@{
  Layout = "_Layout";
}
<div class="well" id="choose">
  <h2>Choose Your Opponent!</h2>
  <button id="humanButton" type="button" class="btn btn-success" name="button">HUMAN</button>
  <button id="computerButton" type="button" class="btn btn-success" name="button">COMPUTER</button>
</div>

<div class="well row" id="human">
  <form id="form" action="/" method="post">
    <div class="form-group col-md-6">
      <h3>PLAYER 1</h3>
      <div class="radio">
        <label>
          <input type="radio" name="player1" value="0" checked>
          Rock
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="player1" value="1">
          Paper
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="player1" value="2">
          Scissors
        </label>
      </div>
    </div>

    <div id="computer">
      <div class="form-group col-md-6">
        <h3>PLAYER 2</h3>
        <div class="radio">
          <label>
            <input type="radio" name="player2" value="0" checked>
            Rock
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="player2" value="1">
            Paper
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="player2" value="2">
            Scissors
          </label>
        </div>
        <div class="radio" id="hidden">
          <label>
            <input type="radio" name="player2" value="3">
            Computer
          </label>
        </div>
      </div>
    </div>


    <button type="submit" class="btn btn-danger" name="button">GO!</button>
  </form>
</div>
